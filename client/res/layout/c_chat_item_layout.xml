<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1">
		<TextView android:text="TextView" android:id="@+id/datum"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="left"></TextView>
		<TextView android:text="TextView" android:id="@+id/author"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="right"></TextView>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1">
		<TextView android:layout_width="wrap_content" android:id="@+id/text"
			android:text="TextView" android:layout_height="wrap_content"></TextView>
	</LinearLayout>
</LinearLayout>
